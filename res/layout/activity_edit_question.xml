<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.witquiz.activities.EditQuestionActivity" >

    <TextView
        android:id="@+id/category_name_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/hello_world"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/question_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine|textCapSentences" 
        android:lines="6">

        <requestFocus />
    </EditText>

    <RadioGroup
         android:id="@+id/radioGroup1"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="0.5" >

         <LinearLayout
       		android:id="@+id/answers_ll0"
       		android:layout_width="match_parent"
       		android:layout_height="wrap_content"
       		android:orientation="horizontal" >
       
          <RadioButton
              android:id="@+id/answer_radio0"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" 
              android:checked="true"/>
          
          <EditText
              android:id="@+id/answer_editText0"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:inputType="textCapSentences" />
     	</LinearLayout>

         <LinearLayout
       		android:id="@+id/answers_ll1"
       		android:layout_width="match_parent"
       		android:layout_height="wrap_content"
       		android:orientation="horizontal" >
          
          <RadioButton
              android:id="@+id/answer_radio1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          
          <EditText
              android:id="@+id/answer_editText1"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:inputType="textCapSentences" />
         
         </LinearLayout>

         <LinearLayout
       		android:id="@+id/answers_ll2"
      		 android:layout_width="match_parent"
       		android:layout_height="wrap_content"
       		android:orientation="horizontal" >
         
          <RadioButton
              android:id="@+id/answer_radio2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          
          <EditText
              android:id="@+id/answer_editText2"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:inputType="textCapSentences" />
         
         </LinearLayout>
         
         <LinearLayout
      		android:id="@+id/answers_ll3"
      		android:layout_width="match_parent"
       		android:layout_height="wrap_content"
       		android:orientation="horizontal" >

          <RadioButton
              android:id="@+id/answer_radio3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
         
          <EditText
              android:id="@+id/answer_editText3"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:inputType="textCapSentences" />
         </LinearLayout>
            
    </RadioGroup>    

</LinearLayout>