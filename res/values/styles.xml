<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
 	
    <style name="app_button" parent="@android:style/Widget.Button">
    	<item name="android:background">@drawable/button_selector</item>
    	<item name="android:textColor">#ffb3b3</item> <!-- Here is specified text color -->
    	<item name="android:textSize">20sp</item>
    	<item name="android:padding">15dp</item>
	</style>
	
    <style name="question_button" parent="@android:style/Widget.Button">
    	<item name="android:background">@drawable/question_button_selector</item>
    	<item name="android:textColor">#000000</item> <!-- Here is specified text color -->
    	<item name="android:textSize">15sp</item>
    	<item name="android:padding">5dp</item>
	</style>
	   
    <style name="WitTheme" parent="AppTheme">
    	<item name="android:windowBackground">@drawable/background</item>
    	<item name="android:colorBackground">@drawable/background</item>
    	<item name="android:buttonStyle">@style/app_button</item>
	</style>

</resources>
