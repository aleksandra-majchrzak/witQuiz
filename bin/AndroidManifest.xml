<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.witquiz"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/WitTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MenuActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activities.NewGameActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activities.BestScoresActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activities.CreatorActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activities.QuestionActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activities.CategoryActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.witquiz.activities.EditQuestionActivity"
            android:label="@string/edit_question" >
        </activity>
    </application>

</manifest>
